@{
    ViewBag.Title = "Home | Demo 2 - AJAX Searching";
}

@* TODO *@
<form data-ajax="true"
      data-ajax-update="#target"
      data-ajex-loading="#loader">
    @Html.TextBox("name", "",
                  new { type = "search", autofocus = "", data_trim = "" })
    <button>Search</button>
    
    <img src="/images/loader.gif" id="loader" style="display: none">
</form>

<div id="target">
    <partial name="_A" />
</div>

@* TODO *@
@section foot {
    <script>
        let timer = null;

        $('#name').on('input', e => {
            clearTimeout(timer);
            timer = setTimeout(()=> $(e.target.form).submit(),500);
        });
    </script>
}